{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{ trip.title }}</h2>
        <div class="metadata">Crée par  le {{ trip.createdAt | date('d/m/Y') }} à 
            {{ trip.createdAt | date('H:i') }} dans la catégorie </div>
        <div class="content">
            <img src="{{ trip.image }}" alt="" />
            {{ trip.description | raw }}
        </div>
    </article>
        
        
        
<section id="commentaires">
    <h1>{{ trip.comments | length }} Commentaires : </h1>
    {% for comment in trip.comments %}
    <div class="comment">
        <div class="row">
            <div class="col-3">
                {{ comment.author}} (<small>{{comment.createdAt | date('d/m/Y à H:i')}}</small>)
            </div>
            <div class="col-9">
                {{ comment.content | raw }}
            </div>
        </div>
    </div>
    {% endfor %}

    {{ form_start(commentForm) }}

    {{ form_row(commentForm.author, {'attr' : {'placeholder' : 'Votre nom'}}) }}
    {{ form_row(commentForm.content, {'attr' : {'placeholder' : 'Saisissez votre commentaire'}}) }}

    <button type="submit" class="btn btn-success">Publier</button>

    {{ form_end(commentForm) }}
</section>

{% endblock body %}


